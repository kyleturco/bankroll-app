.overview-content
  .container
    .col-md-8.left-side
      h1 Financial Summary
      hr
      .add-new-main
        .col-md-4.add-new-project
          h3 Add Income
          form(name="newIncomeForm" ng-submit="main.saveIncome()")
            .form-group
              label.control-label Name
              input.form-control(type="text" ng-model="main.income.name")
            .form-group
              label.control-label Amount
              input.form-control(type="text" ng-model="main.income.amount")
            .form-group
              label.control-label Date
              input.form-control(type="date" ng-model="main.income.date")
            .form-group
              label.control-label Notes
              input.form-control(type="text" ng-model="main.income.notes")
            button(class="btn btn-default" type="submit") Add
        .col-md-4.add-new-expense
          h3 Add Expense
          .form-group
            label.control-label Name
            input.form-control(type="text")
          .form-group
            label.control-label Amount
            input.form-control(type="text")
          .form-group
            label.control-label Date
            input.form-control(type="date")
          .form-group
            label.control-label Notes
            input.form-control(type="text")
          button(class="btn btn-default") Add

    .col-md-4.right-side
      .income-total.sidebar-box
        h2 Income
        hr
        p {{income.total}}
      .expense-total.sidebar-box
        h2 Expenses
        hr
        p {{expense.total}}
  .container
    .col-md-12
      .income-list
        h3 Income List
      .individual-income-item(ng-repeat="incomeItem in incomeList")
        hr
        h3.income-list-header Project Name
          p {{main.income.name}}
        h3.income-list-header Amount
          p {{main.income.amount}}
        h3.income-list-header Date
          p {{main.income.date}}
        h3.income-list-header Notes
          p {{main.income.notes}}
        a.btn.btn-danger(ng-click="main.destroy()") Delete

